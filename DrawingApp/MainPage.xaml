<Page
    x:Class="DrawingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1366" Height="768">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}" Width="1366" Height="768">
        <Button x:Name="_undo" Content="Undo" Margin="80,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="50"/>
        <Button x:Name="_redo" Content="Redo" Margin="240,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="50"/>
        <Button x:Name="_rectangle" Content="Rectangle" Margin="430,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="50"/>
        <Button x:Name="_line" Content="Line" Margin="650,40,100,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="50"/>
        <Button x:Name="_ellipse" Content="Ellipse" Margin="650,40,100,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="150" Height="50"/>
        <Button x:Name="_clear" Content="Clear" Margin="0,40,100,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="150" Height="50"/>
        <Canvas x:Name="_canvas" Margin="50,100,50,50" Background="#FFFFFFA0"/>
        <TextBlock Text="" x:Name="_shapeInfoTextBlock" Margin="1000,680,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"/>

    </Grid>
</Page>
